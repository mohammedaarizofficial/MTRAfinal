<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MTRA - Material Transport Request Application</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    @{
        var isLoginPage = Context.Request.Path.Value?.ToLower() == "/login";
    }

    <div class="container-fluid">
        <div class="row">
            @if (!isLoginPage)
            {
                <!-- Sidebar -->
                <nav class="col-md-2 d-md-block bg-light sidebar" style="box-shadow:0px 5px 5px grey;">
                    <div class="position-sticky d-flex flex-column h-100" style="padding-left:5px;">
                        <div class="mb-4">
                            <div class="d-flex align-items-center justify-content-center">
                                <img src="~/images/ADNOC-Logo-removebg-preview.png" alt="ADNOC logo" style="width:150px;height:100px;">
                            </div>
                        </div>

                        <!-- Navigation Links -->
                        <ul class="nav flex-column flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link " href="/">
                                    <i class="fas fa-inbox me-2"></i>
                                    Inbox
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-truck me-2"></i>
                                    Land Transport
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-globe me-2"></i>
                                    Overseas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Tracking
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Reports
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-question-circle me-2"></i>
                                    Help
                                </a>
                            </li>
                        </ul>

                        <!-- Profile Section -->
                        <div class="mt-auto mb-3 px-3">
                            <div class="d-flex align-items-center gap-2">
                                <img src="https://ui-avatars.com/api/?name=User&background=007bff&color=fff" 
                                     alt="Profile" 
                                     class="rounded-circle"
                                     style="width: 40px; height: 40px;">
                                <div class="flex-grow-1">
                                    <div class="small fw-semibold text-dark">user@adnoc.ae</div>
                                    <form method="post" action="/Login" class="m-0">
                                        <button type="submit" class="btn btn-link text-primary p-0 small">
                                            <i class="fas fa-sign-out-alt me-1"></i>Sign Out
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main content with sidebar -->
                <main class="col-md-10 ms-sm-auto px-md-4">
                    @RenderBody()
                </main>
            }
            else
            {
                <!-- Full width content for login page -->
                <main class="col-12">
                    @RenderBody()
                </main>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>