<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MTRA - Multi-Modal Transport & Logistics</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block bg-light sidebar" style="box-shadow:0px 5px 5px grey;">
                <div class="position-sticky d-flex flex-column h-100" style="padding-left:5px;">
                    <div class="mb-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/ADNOC-Logo-removebg-preview.png" alt="ADNOC logo" style="width:150px;height:100px;">
                        </div>
                    </div>

                    <ul class="nav flex-column flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " href="/Index">
                                <i class="fas fa-inbox me-2"></i>
                                Inbox
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/LandTransport">
                                <i class="fas fa-truck me-2"></i>
                                Land Transport
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-globe me-2"></i>
                                Overseas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Tracking
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-chart-bar me-2"></i>
                                Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-question-circle me-2"></i>
                                Help
                            </a>
                        </li>
                    </ul>

                    <!-- Profile Section -->
                    <div class="mt-auto">
                        <hr class="my-3" style="opacity: 0.15;">
                        <div class="nav-item px-3 d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=User&background=007bff&color=fff" 
                                 alt="Profile" 
                                 class="rounded-circle"
                                 style="width: 32px; height: 32px;">
                            <div class="ms-2">
                                <div class="small text-muted">user@adnoc.ae</div>
                                <a href="/Login" class="text-muted small text-decoration-none">
                                    <i class="fas fa-sign-out-alt me-1"></i>Sign Out
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>