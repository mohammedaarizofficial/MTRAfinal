@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-1 pb-1 mb-4">
    <h1 class="text-center w-100">
        <span class="fw-bold display-4" style="color: #4285f4;">MTRA</span>
        <br>
        <small class="text-muted fs-6">MATERIAL TRANSPORT REQUEST SYSTEM</small>
        <hr class="w-25 mx-auto" style="color: #4285f4; height: 3px;">
    </h1>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card pending-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Pending Requests</h6>
                        <h2 class="card-title mb-0">@Model.Stats.PendingRequests</h2>
                    </div>
                    <div class="stats-icon pending-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card approved-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Approved</h6>
                        <h2 class="card-title mb-0">@Model.Stats.ApprovedRequests</h2>
                    </div>
                    <div class="stats-icon approved-icon">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card rejected-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Rejected</h6>
                        <h2 class="card-title mb-0">@Model.Stats.RejectedRequests</h2>
                    </div>
                    <div class="stats-icon rejected-icon">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card active-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Active Transports</h6>
                        <h2 class="card-title mb-0">@Model.Stats.ActiveTransports</h2>
                    </div>
                    <div class="stats-icon active-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Weekly Chart -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Weekly Transport Requests Overview</h5>
            </div>
            <div class="card-body">
                <div style="height: 300px;">
                    <canvas id="weeklyChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Requests Table -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Requests</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>REQUEST ID</th>
                                <th>TYPE</th>
                                <th>DESTINATION</th>
                                <th>STATUS</th>
                                <th>ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.RecentRequests)
                            {
                                <tr>
                                    <td>@request.RequestId</td>
                                    <td>@request.Type</td>
                                    <td>@request.Destination</td>
                                    <td>
                                        @switch (request.Status)
                                        {
                                            case RequestStatus.Pending:
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case RequestStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case RequestStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            case RequestStatus.Active:
                                                <span class="badge bg-primary">Active</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('weeklyChart').getContext('2d');
            
            // Use your existing WeeklyStats data
            const data = @Html.Raw(Json.Serialize(Model.WeeklyStats));
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(item => item.day),
                    datasets: [{
                        label: 'Transport Requests',
                        data: data.map(item => item.requests),
                        borderColor: '#2563eb',
                        backgroundColor: 'rgba(37, 99, 235, 0.1)',
                        borderWidth: 3,
                        pointBackgroundColor: '#2563eb',
                        pointBorderColor: '#2563eb',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointHoverBorderWidth: 2,
                        tension: 0.4,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: '#f0f0f0',
                                borderDash: [3, 3]
                            },
                            border: {
                                display: false
                            },
                            ticks: {
                                color: '#6b7280',
                                font: {
                                    size: 12
                                }
                            }
                        },
                        y: {
                            grid: {
                                color: '#f0f0f0',
                                borderDash: [3, 3]
                            },
                            border: {
                                display: false
                            },
                            ticks: {
                                color: '#6b7280',
                                font: {
                                    size: 12
                                },
                                beginAtZero: true
                            }
                        }
                    }
                }
            });
        });
    </script>
}