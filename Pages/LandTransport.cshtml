@page
@model LandTransportModel
@{
    ViewData["Title"] = "Material Transport Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Material Transport System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .section-header {
            background: linear-gradient(135deg, #4285f4 0%, #5f7de2 100%);
            color: white;
            margin-bottom: 0;
            border-radius: 0.375rem 0.375rem 0 0;
        }
        .form-section {
            margin-bottom: 3rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.375rem;
        }
        .form-section .card-body {
            padding: 2rem;
        }
        .section-divider {
            margin: 3rem 0;
            border: 0;
            height: 2px;
            background: linear-gradient(to right, transparent, #667eea, transparent);
        }
        .required-field::after {
            content: "*";
            color: #dc3545;
            margin-left: 4px;
        }
        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 0.5rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-weight: 500;
            border-radius: 0.375rem;
        }
        .btn-submit:hover {
            transform: translateY(-1px);
            box-shadow: 0 0.25rem 0.5rem rgba(102, 126, 234, 0.3);
        }
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-1 pb-1 mb-3">
        <h1 class="text-center w-100">
            <span class="fw-bold display-4" style="color: #4285f4;">MTRA</span>
            <br>
            <small class="text-muted fs-6">MATERIAL TRANSPORT REQUEST SYSTEM</small>
            <hr class="w-25 mx-auto" style="color: #4285f4; height: 3px;">
        </h1>
    </div>

    <div class="container">
        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            
            <!-- Section 1: General Transport Request Details -->
            <div class="form-section">
                <div class="card">
                    <div class="card-header section-header">
                        <h3 class="mb-0 py-2">
                            <i class="fas fa-clipboard-list me-2"></i>
                            Section 1: General Transport Request Details
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Row 1 -->
                            <div class="col-md-6 mb-3">
                                <label for="from" class="form-label required-field">From</label>
                                <input type="text" class="form-control" id="from" name="From" 
                                       placeholder="Enter origin location" required />
                                <div class="invalid-feedback">
                                    Please provide a valid origin location.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="fromSite" class="form-label required-field">From Site</label>
                                <input type="text" class="form-control" id="fromSite" name="FromSite" 
                                       placeholder="Enter site name" required />
                                <div class="invalid-feedback">
                                    Please provide the site name.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 2 -->
                            <div class="col-md-6 mb-3">
                                <label for="designation" class="form-label required-field">Designation</label>
                                <input type="text" class="form-control" id="designation" name="Designation" 
                                       placeholder="Enter your designation" required />
                                <div class="invalid-feedback">
                                    Please provide your designation.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="department" class="form-label required-field">Department</label>
                                <input type="text" class="form-control" id="department" name="Department" 
                                       placeholder="Enter department name" required />
                                <div class="invalid-feedback">
                                    Please provide the department name.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 3 -->
                            <div class="col-md-4 mb-3">
                                <label for="date" class="form-label required-field">Date</label>
                                <input type="date" class="form-control" id="date" name="Date" required />
                                <div class="invalid-feedback">
                                    Please select a valid date.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="time" class="form-label required-field">Time</label>
                                <input type="time" class="form-control" id="time" name="Time" required />
                                <div class="invalid-feedback">
                                    Please select a valid time.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="requiredDate" class="form-label required-field">Required Date</label>
                                <input type="date" class="form-control" id="requiredDate" name="RequiredDate" required />
                                <div class="invalid-feedback">
                                    Please select the required date.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 4 -->
                            <div class="col-md-6 mb-3">
                                <label for="consignmentNote" class="form-label">Consignment Note</label>
                                <input type="text" class="form-control" id="consignmentNote" name="ConsignmentNote" 
                                       placeholder="Enter consignment note number" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="materialCollectionPoint" class="form-label required-field">Material Collection Point</label>
                                <select class="form-select" id="materialCollectionPoint" name="MaterialCollectionPoint" required>
                                    <option value="">Select collection point</option>
                                    <option value="Warehouse A">Warehouse A</option>
                                    <option value="Warehouse B">Warehouse B</option>
                                    <option value="Site Store">Site Store</option>
                                    <option value="Central Storage">Central Storage</option>
                                    <option value="Field Office">Field Office</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a material collection point.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 5 -->
                            <div class="col-md-6 mb-3">
                                <label for="initiatorContact" class="form-label required-field">Initiator Contact Number</label>
                                <input type="tel" class="form-control" id="initiatorContact" name="InitiatorContactNumber" 
                                       placeholder="+1 (555) 123-4567" required />
                                <div class="invalid-feedback">
                                    Please provide a valid contact number.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="functionalLocation" class="form-label">Functional Location</label>
                                <input type="text" class="form-control" id="functionalLocation" name="FunctionalLocation" 
                                       placeholder="Enter functional location" />
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 6 -->
                            <div class="col-md-6 mb-3">
                                <label for="equipmentNumber" class="form-label">Equipment Number</label>
                                <input type="text" class="form-control" id="equipmentNumber" name="EquipmentNumber" 
                                       placeholder="Enter equipment number" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="assetValue" class="form-label">Asset Value</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="assetValue" name="AssetValue" 
                                       placeholder="0.00" />
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 7 -->
                            <div class="col-12 mb-3">
                                <label for="assetRemarks" class="form-label">Asset Remarks</label>
                                <textarea class="form-control" id="assetRemarks" name="AssetRemarks" rows="3" 
                                          placeholder="Enter any additional remarks about the assets"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section Divider -->
            <hr class="section-divider" />

            <!-- Section 2: Material Details -->
            <div class="form-section">
                <div class="card">
                    <div class="card-header section-header">
                        <h3 class="mb-0 py-2">
                            <i class="fas fa-boxes me-2"></i>
                            Section 2: Material Details
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Row 1 -->
                            <div class="col-md-6 mb-3">
                                <label for="materialId" class="form-label required-field">Material ID</label>
                                <input type="text" class="form-control" id="materialId" name="MaterialId" 
                                       placeholder="Enter material ID" required />
                                <div class="invalid-feedback">
                                    Please provide a material ID.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="materialCode" class="form-label required-field">Material Code</label>
                                <input type="text" class="form-control" id="materialCode" name="MaterialCode" 
                                       placeholder="Enter material code" required />
                                <div class="invalid-feedback">
                                    Please provide a material code.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 2 -->
                            <div class="col-md-6 mb-3">
                                <label for="materialValue" class="form-label">Material Value</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="materialValue" name="MaterialValue" 
                                       placeholder="0.00" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="assetValueUsd" class="form-label">Asset Value (USD)</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="assetValueUsd" name="AssetValueUsd" 
                                       placeholder="0.00" />
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 3 -->
                            <div class="col-12 mb-3">
                                <label for="materialDescription" class="form-label required-field">Material Description</label>
                                <textarea class="form-control" id="materialDescription" name="MaterialDescription" rows="3" 
                                          placeholder="Provide detailed description of the material" required></textarea>
                                <div class="invalid-feedback">
                                    Please provide a material description.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 4 -->
                            <div class="col-md-4 mb-3">
                                <label for="roAgreement" class="form-label">RO/Agreement</label>
                                <input type="text" class="form-control" id="roAgreement" name="RoAgreement" 
                                       placeholder="Enter RO/Agreement number" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="glAccountCode" class="form-label">GL Account Code</label>
                                <input type="text" class="form-control" id="glAccountCode" name="GlAccountCode" 
                                       placeholder="Enter GL account code" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="wbsCode" class="form-label">WBS Code</label>
                                <input type="text" class="form-control" id="wbsCode" name="WbsCode" 
                                       placeholder="Enter WBS code" />
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 5 -->
                            <div class="col-md-6 mb-3">
                                <label for="costCenter" class="form-label">Cost Center</label>
                                <input type="text" class="form-control" id="costCenter" name="CostCenter" 
                                       placeholder="Enter cost center" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="contactName" class="form-label required-field">Contact Name</label>
                                <input type="text" class="form-control" id="contactName" name="ContactName" 
                                       placeholder="Enter contact person name" required />
                                <div class="invalid-feedback">
                                    Please provide a contact name.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 6 -->
                            <div class="col-md-6 mb-3">
                                <label for="contactEmail" class="form-label required-field">Contact Email</label>
                                <input type="email" class="form-control" id="contactEmail" name="ContactEmail" 
                                       placeholder="contact@example.com" required />
                                <div class="invalid-feedback">
                                    Please provide a valid email address.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="contactMobile" class="form-label required-field">Contact Mobile</label>
                                <input type="tel" class="form-control" id="contactMobile" name="ContactMobile" 
                                       placeholder="+1 (555) 123-4567" required />
                                <div class="invalid-feedback">
                                    Please provide a valid mobile number.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 7 -->
                            <div class="col-md-6 mb-3">
                                <label for="loadingPointAddress" class="form-label required-field">Loading Point Address</label>
                                <textarea class="form-control" id="loadingPointAddress" name="LoadingPointAddress" rows="3" 
                                          placeholder="Enter complete loading point address" required></textarea>
                                <div class="invalid-feedback">
                                    Please provide the loading point address.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="deliveryAddress" class="form-label required-field">Delivery Address</label>
                                <textarea class="form-control" id="deliveryAddress" name="DeliveryAddress" rows="3" 
                                          placeholder="Enter complete delivery address" required></textarea>
                                <div class="invalid-feedback">
                                    Please provide the delivery address.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Row 8 -->
                            <div class="col-md-6 mb-3">
                                <label for="remarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="remarks" name="Remarks" rows="3" 
                                          placeholder="Enter any additional remarks"></textarea>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="deliveryPointMap" class="form-label">Delivery Point (Attach Site Map)</label>
                                <input type="file" class="form-control" id="deliveryPointMap" name="DeliveryPointMap" 
                                       accept=".pdf,.jpg,.jpeg,.png,.gif" />
                                <div class="form-text">
                                    Accepted formats: PDF, JPG, PNG, GIF (Max size: 10MB)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-submit btn-lg mb-3" style="background: linear-gradient(135deg, #4285f4 0%, #5f7de2 100%);">
                        <i class="fas fa-paper-plane me-2"></i>
                        Submit Transport Request
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    
    <!-- Form Validation Script -->
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Set minimum date to today for date inputs
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').setAttribute('min', today);
            document.getElementById('requiredDate').setAttribute('min', today);
        });
    </script>
</body>
</html>